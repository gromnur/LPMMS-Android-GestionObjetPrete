<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Titre  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajout_titre"
        android:layout_marginLeft="@dimen/marge_gauche_textiew"/>

    <!-- Ligne libelle -->
    <TableRow>
        <TextView
            style="@style/ajout_text_view"
            android:text="@string/ajout_libelle" />

        <EditText
            android:id="@+id/ajout_libelle"
            style="@style/ajout_edit_text"
            />
    </TableRow>

    <!-- Ligne Description -->
    <TableRow>
        <TextView
            style="@style/ajout_text_view"
            android:text="@string/ajout_description" />

        <EditText
            android:id="@+id/ajout_description"
            style="@style/ajout_edit_text"
            android:inputType="textMultiLine"
            />
    </TableRow>

    <!-- Ligne Nom -->
    <TableRow>
        <TextView
            style="@style/ajout_text_view"
            android:text="@string/ajout_nom" />

        <EditText
            android:id="@+id/ajout_nom"
            style="@style/ajout_edit_text"
            />
    </TableRow>

    <!-- Ligne Prenom -->
    <TableRow>
        <TextView
            style="@style/ajout_text_view"
            android:text="@string/ajout_prenom" />

        <EditText
            android:id="@+id/ajout_prenom"
            style="@style/ajout_edit_text"
            />
    </TableRow>

</TableLayout>